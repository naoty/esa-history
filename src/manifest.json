{
  "manifest_version": 2,
  "name": "esa-history",
  "version": "1.1.0",
  "description": "Manage browsing history for *.esa.io",
  "permissions": ["declarativeContent", "storage", "tabs"],
  "background": {
    "scripts": ["background/bundle.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://*.esa.io/posts/*"],
      "js": ["content/bundle.js"]
    }
  ],
  "page_action": {
    "default_popup": "popup/index.html"
  }
}
